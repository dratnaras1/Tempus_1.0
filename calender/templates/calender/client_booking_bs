<!-- Javascript -->
<!--jpicker-->
<script type="text/javascript">

    var segment_str = window.location.pathname; //
    var segment_array = segment_str.split( '/' );
//    last segmant of url
    var userName = segment_array.pop();


$(document).ready(function() {

    var dateToday = new Date();
    var $date = $('#f1-Date').pickadate({
        format: 'dd/mm/yyyy',
        altFormat: "yyyy-mm-dd",
        formatSubmit: 'yyyy-mm-dd',
        min: dateToday,
        disable: [1, 7],
        hiddenSuffix: ''


    });
    var datePicker = $date.pickadate('picker')

    var $time = $('#f1-Time');
    $time.hide();
////    initialsise picker

//    var timeField = $('#f1-Time')
    var dateToday = new Date();
    var $time = $('#f1-Time').pickatime({
        min: [9, 00],
        max: [17, 00],
        formatSubmit: 'H:i',
        hiddenSuffix: ''
    });

    var picker = $time.pickatime('picker')


    datePicker.on({


        open: function() {
            console.log('Opened up!')
            picker.clear()
            picker.set('enable', true)
//            $timePickerInput.clear()
        },

        close: function () {


            dateSelect = datePicker.get('select', 'yyyy-mm-dd')
            console.log(dateSelect)
            getTime()


            function getTime() {
                var timeArr;
                $.ajax({
                    type: 'GET',
                    url: '/calender/getTimes/'+userName,
                    data: {
                        "selectedDate": dateSelect
                    },
                    success: function (data) {
                        timeArr = data.time
                        console.log(timeArr.toString())
                        timePicker(timeArr)
                    }
                });
            }

            function timePicker(time) {

                picker.set('disable', time)
                $time.show()

            }

        }

    })


});


</script>




